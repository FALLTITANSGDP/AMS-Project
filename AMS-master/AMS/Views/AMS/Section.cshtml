@model List<AMS.Models.Section>
@{
    ViewBag.Title = "Course Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl position-relative bg-white d-flex p-0">
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 10%;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-8">
                <form class="login-form" action="SaveSection" method="post">
                    <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="form-floating mb-3">
                            <input required type="text" name="Name" class="form-control" id="floatingText" placeholder="jhondoe">
                            <label for="floatingText">Section Name</label>
                        </div>
                        <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Add Course</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="bg-light col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Section Registered</h6>
                <input class="form-control" id="myInput" type="text" placeholder="Search..">
                <table class="table">
                    <thead>
                        <tr>

                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @if (@Model.Count <= 0)
                        {
                            <tr><td colspan=4 style="text-align: center;"><h6>No data found</h6></td></tr>
                        }
                        @foreach (var listItem in Model)
                        {
                            <tr>

                                <td>@listItem.Id</td>
                                <td>@listItem.Name</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#AtagDiv a').removeClass('active');
        $('#adminSection').addClass('active');
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

