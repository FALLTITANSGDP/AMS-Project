@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Sale & Revenue Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-bar fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Course Registered</p>
                    <h6 class="mb-0">
                        @if (ViewData.ContainsKey("CourseReg"))
                        {
                            @ViewData["CourseReg"].ToString()
                        }
                        else
                        {
                            <span>0</span>
                        }
                    </h6>
                </div>
            </div>
        </div>
        @if (User.IsInRole("Student"))
        {

            <div class="col-sm-6 col-xl-3">
                <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-bar fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Total Course Attended</p>
                        @if (ViewData.ContainsKey("CourseAtt"))
                        {
                            @ViewData["CourseAtt"].ToString()
                        }
                        else
                        {
                            <span>0 </span>
                        }
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<!-- Sale & Revenue End -->